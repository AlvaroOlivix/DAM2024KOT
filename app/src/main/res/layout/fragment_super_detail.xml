<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.supers.presentation.SuperDetailFragment">

    <LinearLayout
        android:id="@+id/linear_sup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_super"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Nombre pokemon"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/power_super"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_super"
            android:layout_marginTop="10dp"
            android:text="power pokemon"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appeareance_super"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/power_super"
            android:layout_marginTop="10dp"
            android:text="appeareance pokemon"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/biography_super"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appeareance_super"
            android:layout_marginTop="10dp"
            android:text="biography"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/work_super"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/biography_super"
            android:layout_marginTop="10dp"
            android:text="actual work"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/conections_super"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_super"
            android:layout_marginTop="10dp"
            android:text="conections"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_super"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/linear_sup"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        tools:src="@tools:sample/avatars" />


</RelativeLayout>