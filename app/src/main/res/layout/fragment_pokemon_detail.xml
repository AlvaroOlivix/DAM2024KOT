<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.pokemons.presentation.ui.fragment.PokemonDetailFragment">

    <TextView
        android:id="@+id/name_pokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Nombre pokemon"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/power_pokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="power pokemon"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_pokemon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/name_pokemon"
        tools:src="@tools:sample/avatars" />

</RelativeLayout>